<a href="@Url" class="max-w-sm rounded overflow-hidden shadow-lg m-5 flex-none">
    <img class="w-full" src="@UrlToImage" alt="@Title">
    <div class="px-6 py-4">
    <div class="font-bold text-xl mb-2">
        @Title
    </div>
    <p class="text-base">
        @Description
    </p>
    </div>
    <div class="px-6 py-4">
        <p>by: @Author</p>
        <p class="italic">source: @Source</p>
        <p>@Date</p>
    </div>
</a>