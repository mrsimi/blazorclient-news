<EditForm Model=@SearchRequest OnSubmit=@FormSubmitted  class="container mx-auto flex justify-end my-10 px-10 md:px-0" >
    <InputText @bind-Value=SearchRequest.QueryString class="w-full md:w-2/3 px-3 py-2 border border-gray-200 shadow-lg" id="searchQuery"/>
    <input type="submit" class="border border-gray-200 px-3 py-2 shadow-lg" value="Search" id="searchBtn"/>
</EditForm>

<div>
    @if(data == null)
    {
       
<div class="content">
   <div class="loaders">
    <div class="triangle"></div>
    <div class="rect"></div>
    <div class="circle"></div>
    <div class="kite"></div>
   </div>
 </div>
    }
    else{
         <section>
            <div class="container mx-auto">
                <p class="container text-center">
                    Showing new results on <span class="text-xl italic">@Query</span>
                </p>
                <div id="card" class="flex flex-wrap justify-center">
                    @foreach (var article in data.articles)
                    {
                        @if (article.author == null)
                        {
                            article.author = "Anon";
                        }
                        <Card Title="@article.title"
                            UrlToImage="@article.urlToImage"
                            Url="@article.url"
                            Description ="@article.description"
                            Author = "@article.author"
                            Source ="@article.source.name"
                            Date ="@article.publishedAt.ToLongDateString()"/>
                    }
                </div>
            </div>
        </section>
    }
</div>